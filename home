      @keyframes fade-out { to { opacity: 0; } }
      @keyframes slide-from-right { from { transform: translateX(50px); opacity: 0; } }
      @keyframes slide-to-left { to { transform: translateX(-50px); opacity: 0; } }

      ::view-transition-old(root) {
        animation: 0.4s var(--tx-ease) both fade-out, 0.4s var(--tx-ease) both slide-to-left;
      }
      ::view-transition-new(root) {
        animation: 0.4s var(--tx-ease) 0.1s both fade-in, 0.4s var(--tx-ease) 0.1s both slide-from-right;
      }
      
      /* Tắt anim khi chuyển theme */
      html.theme-changing::view-transition-old(root),
      html.theme-changing::view-transition-new(root) {
        animation: none;
      }
      
      /* Anim riêng cho dark/light mode (cross-fade) */
      html.theme-changing::view-transition-old(root) {
        animation: 0.3s var(--tx-ease) both fade-out;
      }
      html.theme-changing::view-transition-new(root) {
        animation: 0.3s var(--tx-ease) both fade-in;
      }
      
    </style>
</head>
